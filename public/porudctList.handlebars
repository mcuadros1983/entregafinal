{{#if products}}
<div class='table-responsive'>
    <table class='table table-hover'>
        <thead>
            <tr>
                <th>NOMBRE</th>
                <th>PRECIO</th>
                <th>DESCRIPCION</th>
                <th>CODIGO</th>
                <th>FOTO</th>
                <th>STOCK</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>{{{title}}}</td>
                <td>{{{price}}}</td>
                <td>{{{description}}}</td>
                <td>{{{code}}}</td>
                <td width='100px'>
                    <img src='{{{image}}}' alt='{{{title}}}' width='100px' />
                </td>
                <td>{{{stock}}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{else}}
<div class='alert alert-danger'>No hay productos</div>
{{/if}}